<?xml version="1.0"?>
<root>
  <item>
    <name>Capslock Vim Arrows</name>
    <appendix>Use capslock+HJKL as arrow keys and escape.</appendix>
    <identifier>private.capslock_vim_arrows</identifier>
    <autogen>
      __KeyOverlaidModifier__
      KeyCode::PC_APPLICATION,
      KeyCode::VK_MODIFIER_EXTRA1,
      KeyCode::ESCAPE,
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::H, ModifierFlag::EXTRA1,
      KeyCode::CURSOR_LEFT
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::J, ModifierFlag::EXTRA1,
      KeyCode::CURSOR_DOWN
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::K, ModifierFlag::EXTRA1,
      KeyCode::CURSOR_UP
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::L, ModifierFlag::EXTRA1,
      KeyCode::CURSOR_RIGHT
    </autogen>
  </item>

  <item>
    <name>Window cycling using remapped Capslock.</name>
    <appendix>Use capslock+brackets as CTRL+F4.</appendix>
    <identifier>private.capslock_brackets</identifier>
    <autogen>
      __KeyToKey__
      KeyCode::BRACKET_RIGHT, ModifierFlag::EXTRA1,
      KeyCode::F4, ModifierFlag::CONTROL_L
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::BRACKET_LEFT, ModifierFlag::EXTRA1,
      KeyCode::F4, ModifierFlag::CONTROL_L | ModifierFlag::SHIFT_L
    </autogen>
  </item>

  <vkopenurldef>
    <name>KeyCode::VK_OPEN_URL_SHELL_activate_iterm</name>
    <url type="shell">
      <![CDATA[   osascript -l JavaScript -e 'Application("iTerm").activate()'  ]]>
    </url>
  </vkopenurldef>

  <vkopenurldef>
    <name>KeyCode::VK_OPEN_URL_SHELL_activate_macvim</name>
    <url type="shell">
      <![CDATA[   osascript -l JavaScript -e 'Application("MacVim").activate()'  ]]>
    </url>
  </vkopenurldef>

  <vkopenurldef>
    <name>KeyCode::VK_OPEN_URL_SHELL_activate_google_chrome</name>
    <url type="shell">
      <![CDATA[   osascript -l JavaScript -e 'Application("Google Chrome").activate()'  ]]>
    </url>
  </vkopenurldef>

  <item>
    <name>Common application shortcuts.</name>
    <appendix>Switch to common applications with shortcuts.</appendix>
    <identifier>private.capslock_app_shortcuts</identifier>
    <autogen>
      __KeyToKey__
      KeyCode::Q, ModifierFlag::EXTRA1,
      KeyCode::VK_OPEN_URL_SHELL_activate_iterm
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::W, ModifierFlag::EXTRA1,
      KeyCode::VK_OPEN_URL_SHELL_activate_macvim
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::E, ModifierFlag::EXTRA1,
      KeyCode::VK_OPEN_URL_SHELL_activate_google_chrome
    </autogen>
  </item>
</root>
